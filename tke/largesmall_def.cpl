SUBROUTINE largesmall_setup() FOLLOWS
BOOLEAN FUNCTION is_large(INTEGER ix, INTEGER iz) FOLLOWS
INTEGER z_threshold

MODULE largesmall_def

SUBROUTINE largesmall_setup()
    FILE in_params = OPENRO("largesmall_settings.in")
    READ BY NAME z_threshold FROM in_params
END largesmall_setup

BOOLEAN FUNCTION is_large(INTEGER ix, INTEGER iz)
  RESULT ABS(iz)<=z_threshold
END is_large

